<% include partials/header.ejs %>

<div class="w-full min-h-screen bg-zinc-100 p-10">
    <div class="max-w-6xl mx-auto">
        <div class="flex items-center justify-between mb-10">
            <h1 class="text-4xl font-bold text-zinc-800">Welcome, <%= currentUser.username %>!</h1>
            <a href="/logout" class="px-6 py-3 bg-red-600 text-white rounded-full font-semibold hover:bg-red-700">Logout</a>
        </div>
        
        <div class="bg-white rounded-3xl p-8 shadow-lg">
            <h2 class="text-2xl font-semibold text-zinc-700 mb-6">Profile Information</h2>
            <div class="space-y-4">
                <div>
                    <label class="text-sm font-semibold text-zinc-600">Username</label>
                    <p class="text-lg text-zinc-800"><%= currentUser.username %></p>
                </div>
                <div>
                    <label class="text-sm font-semibold text-zinc-600">Email</label>
                    <p class="text-lg text-zinc-800"><%= currentUser.email %></p>
                </div>
                <div>
                    <label class="text-sm font-semibold text-zinc-600">Contact</label>
                    <p class="text-lg text-zinc-800"><%= currentUser.contact %></p>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>
