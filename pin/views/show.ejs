<% include partials/header.ejs %>

<div class="w-full min-h-screen bg-[#2b2b2b] px-10 py-8 text-white">
    <h1 class="text-3xl font-bold mb-8">All Posts</h1>
    <div class="flex flex-wrap gap-10">
        <% if(currentUser.posts && currentUser.posts.length > 0) { %>
            <% currentUser.posts.forEach(function(post){ %>
                <a href="/show/post/<%= post._id %>" class="card w-52 cursor-pointer hover:opacity-80 transition-opacity">
                    <div class="w-full h-64 bg-zinc-700 rounded-lg overflow-hidden">
                        <img src="/images/uploads/<%= post.image %>" class="w-full h-full object-cover" alt="">
                    </div>
                    <h5 class="mt-3 text-lg font-semibold"><%= post.title %></h5>
                    <p class="mt-1 text-sm text-zinc-400"><%= post.description %></p>
                </a> 
            <% }) %>
        <% } else { %>
            <p class="text-zinc-400">No posts yet. Create your first post!</p>
        <% } %>
    </div>
</div>

<% include partials/footer.ejs %>