<% include ./partials/header.ejs %>

<div class="w-full min-h-screen bg-[#2b2b2b] px-10 pt-20 pb-5 text-white">
    <h1 class="text-xl">Create a New Post</h1>
    <hr class="opacity-10 mt-3">

  <form action="/createpost" method="post" enctype="multipart/form-data">
    <input class="block w-1/3 px-3 py-2 border-2 bg-zinc-700 mt-2 rounded-md text-white" type="file" name="postimage">
    <input class="block w-1/3 px-3 py-2 border-2 bg-zinc-700 mt-2 rounded-md text-white" type="text" placeholder="Title" name="title">
    <textarea class="block w-1/3 px-3 py-2 border-2 bg-zinc-700 mt-2 rounded-md text-white" placeholder="Description" name="description"></textarea>
    <input class="block w-1/3 px-3 py-2 border-2 mt-2 rounded-md bg-red-600 text-white cursor-pointer hover:bg-red-700" type="submit" value="Create Post">
  </form>

</div>
 
