<% include partials/header.ejs %>

<div class="w-full min-h-screen bg-[#2b2b2b] flex items-center justify-center px-4 py-8">
    <div class="max-w-5xl w-full">
        <!-- Back Button -->
        <div class="mb-6">
            <a href="/show/posts" class="inline-flex items-center px-4 py-2 bg-zinc-800 hover:bg-zinc-700 text-white rounded-lg text-sm font-medium transition-all">
                <i class="ri-arrow-left-line mr-2"></i>
                Back to All Posts
            </a>
        </div>

        <!-- Post Detail Card -->
        <div class="bg-zinc-800 rounded-2xl overflow-hidden shadow-2xl">
            <div class="md:flex">
                <!-- Image Section -->
                <div class="md:w-1/2 bg-zinc-900">
                    <img src="/images/uploads/<%= post.image %>" class="w-full h-full object-cover min-h-[400px] max-h-[600px]" alt="<%= post.title %>">
                </div>

                <!-- Content Section -->
                <div class="md:w-1/2 p-8 md:p-10 flex flex-col">
                    <!-- Post Title -->
                    <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">
                        <%= post.title %>
                    </h1>

                    <!-- Post Description -->
                    <p class="text-zinc-300 text-base md:text-lg leading-relaxed mb-8">
                        <%= post.description %>
                    </p>

                    <!-- Author Info -->
                    <div class="mt-auto pt-8 border-t border-zinc-700">
                        <div class="flex items-center">
                            <div class="w-12 h-12 rounded-full bg-zinc-700 flex items-center justify-center mr-4">
                                <i class="ri-user-line text-white text-xl"></i>
                            </div>
                            <div>
                                <p class="text-white font-semibold text-lg"><%= post.user.name || 'User' %></p>
                                <p class="text-zinc-400 text-sm">@<%= post.user.username %></p>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-8 flex gap-4">
                        <button class="flex-1 px-6 py-3 bg-red-600 hover:bg-red-700 text-white rounded-lg font-semibold transition-all">
                            <i class="ri-heart-line mr-2"></i>
                            Save
                        </button>
                        <button class="px-6 py-3 bg-zinc-700 hover:bg-zinc-600 text-white rounded-lg font-semibold transition-all">
                            <i class="ri-share-line"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<% include partials/footer.ejs %>
